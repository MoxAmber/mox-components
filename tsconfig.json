{
  "compilerOptions": {
    "strict": true,
    "target": "es2021",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2021", "dom"],
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["jest"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
